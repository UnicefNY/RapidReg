<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/photo_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lighter_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_image_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/case_register_label_padding_left_right"
            android:paddingRight="@dimen/case_register_label_padding_left_right"
            android:src="@drawable/photo_camera"/>

        <GridView
            android:id="@+id/photo_grid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:columnWidth="90dp"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:stretchMode="columnWidth" />

    </LinearLayout>

    <TextView
        android:id="@+id/no_photo_promote_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:paddingLeft="@dimen/case_register_field_padding_left_right"
        android:paddingRight="@dimen/case_register_field_padding_left_right"
        android:text="@string/no_photo_promote_info"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lighter_white"/>
</LinearLayout>

