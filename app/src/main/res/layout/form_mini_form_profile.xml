<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mini_form_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_id"
            android:textColor="@color/primero_font_dark"/>

        <TextView
            android:id="@+id/id_normal_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primero_font_dark"/>

        <ImageView
            android:id="@+id/connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/matching_badge_left_margin"
            android:layout_marginStart="@dimen/matching_badge_left_margin"
            android:background="@drawable/connected"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gender_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/gender_name"
            android:layout_width="@dimen/gender_name_length"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gender_left_margin"
            android:layout_marginStart="@dimen/gender_left_margin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/age_badge_left_margin"
            android:layout_marginStart="@dimen/age_badge_left_margin"
            android:background="@drawable/age_little"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/age_left_margin"
            android:layout_marginStart="@dimen/age_left_margin"
            android:textColor="@color/primero_font_medium"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/registration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primero_font_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray"/>
    </LinearLayout>

</RelativeLayout>
