<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center"
              android:orientation="vertical"
              tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/audio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/case_register_mini_heigh"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/record_button"
            android:layout_width="@dimen/camera_photo_size"
            android:layout_height="@dimen/camera_photo_size"
            android:paddingLeft="@dimen/case_register_label_padding_left_right"
            android:paddingRight="@dimen/case_register_label_padding_left_right"
            android:src="@drawable/mic_rec_210"/>

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="@dimen/camera_photo_size"
            android:layout_height="@dimen/camera_photo_size"
            android:paddingLeft="@dimen/case_register_label_padding_left_right"
            android:paddingRight="@dimen/case_register_label_padding_left_right"
            android:src="@drawable/play_210"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/no_file_text_view"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/case_register_field_padding_left_right"
            android:paddingRight="@dimen/case_register_field_padding_left_right"
            android:text=""
            android:textColor="@color/primero_font_medium"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="@dimen/record_delete_button_size"
            android:layout_height="@dimen/record_delete_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/case_register_field_padding_left_right"
            android:src="@drawable/recycle_bin"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/primero_lighter_white"/>

</LinearLayout>
