<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primero_blue</item>
        <item name="colorPrimaryDark">@color/primero_blue</item>
        <item name="colorAccent">@color/primero_blue</item>
        <item name="android:textColorPrimary">@color/primero_font_dark</item>
        <item name="android:textColor">@color/primero_font_dark</item>
    </style>

    <!--row in case list start-->
    <style name="Avatar">
        <item name="android:layout_width">@dimen/case_avatar_width</item>
        <item name="android:layout_height">@dimen/case_avatar_height</item>
        <item name="android:layout_marginBottom">@dimen/img_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/img_left_margin</item>
        <item name="android:layout_marginTop">@dimen/img_vertical_margin</item>
    </style>

    <style name="TextAreaOfCaseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/text_area_left_margin</item>
        <item name="android:layout_marginRight">@dimen/text_area_right_margin</item>
        <item name="android:layout_marginTop">@dimen/text_area_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_area_bottom_margin</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/primero_font_dark</item>
    </style>
    <!--row in case list end-->

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:width">80dp</item>
        <item name="android:height">80dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
