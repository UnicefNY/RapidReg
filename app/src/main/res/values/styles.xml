<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primero_blue</item>
        <item name="colorPrimaryDark">@color/primero_blue</item>
        <item name="colorAccent">@color/primero_blue</item>
        <item name="android:textColorPrimary">@color/primero_font_dark</item>
        <item name="android:textColor">@color/primero_font_dark</item>
    </style>

    <!--row in case list start-->
    <style name="Avatar">
        <item name="android:layout_width">@dimen/case_avatar_width</item>
        <item name="android:layout_height">@dimen/case_avatar_height</item>
        <item name="android:layout_marginBottom">@dimen/img_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/img_left_margin</item>
        <item name="android:layout_marginTop">@dimen/img_vertical_margin</item>
    </style>

    <style name="TextAreaOfCaseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/primero_font_dark</item>
    </style>
    <!--row in case list end-->

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="actionButtonStyle">@style/myToolbarNavigationButtonStyle</item>-->
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textSize">@dimen/text_size_24</item>-->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:drawablePadding">@dimen/size_24</item>
        <item name="android:paddingLeft">@dimen/size_15</item>
        <item name="android:paddingRight">@dimen/size_15</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/nav_text_black</item>
    </style>

    <style name="NavigationItemLine">
             <item name="android:layout_width">match_parent</item>
             <item name="android:layout_height">@dimen/size_1</item> 
            <item name="android:layout_marginRight">@dimen/size_15</item> 
            <item name="android:layout_marginLeft">@dimen/size_15</item> 
            <item name="android:background">@color/nav_line_gray</item>
    </style>


    <style name="RadioButton">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/primero_font_medium</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
    </style>

    <style name="ProgressDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textSize">@dimen/progress_dialog_message_text_size</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
