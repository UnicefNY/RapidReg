<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tool_bar</item>
        <item name="colorPrimaryDark">@color/tool_bar</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--row in case list start-->
    <style name="Avatar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/img_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/img_left_margin</item>
        <item name="android:layout_marginTop">@dimen/img_vertical_margin</item>
    </style>

    <style name="TextAreaOfCaseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/text_area_left_margin</item>
        <item name="android:layout_marginRight">@dimen/text_area_right_margin</item>
        <item name="android:layout_marginTop">@dimen/text_area_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_area_bottom_margin</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/font_dark</item>
    </style>
    <!--row in case list end-->

</resources>
